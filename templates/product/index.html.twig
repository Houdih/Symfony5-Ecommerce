{% extends 'base.html.twig' %}

{% block title %} Nos produits - La boutique {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            <h3> Filter </h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3> Nos Produits </h3>
        
            <div class="row products-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                            <h5> {{ product.name }} </h5>
                            <span class="product-subtitle"> {{ product.subtitle }} </span> <br />
                            <span class="product-prix"> {{ (product.prix / 100) | number_format(2, ',', '.')}} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
